#!/usr/bin/env bash

if command -v "docker-compose" > /dev/null && command -v "docker-machine" > /dev/null; then
  code=0
else
  code=1
fi

if [[ $1 != "quiet" ]]; then
  if [[ $code == 0 ]]; then
    echo "Rocker ready to rock!"
  else
    echo "Run rocker bootstrap to set up the dependencies"
  fi
fi

exit $code
